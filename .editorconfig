# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2

[*.pl]
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.js]
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.jsx]
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.css]
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.html]
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{diff,md}]
trim_trailing_whitespace = false
